<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.likecode.dao.BarrageDao">
    <insert id="insertBarrage" useGeneratedKeys="true" keyProperty="id" parameterType="com.likecode.bean.Barrage">
        INSERT INTO t_barrage (content)VALUES(#{barrage.content})
    </insert>

    <select id="getBarrages" resultType="com.likecode.bean.Barrage">
        select * from t_barrage
    </select>
</mapper>
